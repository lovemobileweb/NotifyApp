<body class="login-page" ng-app="myApp" ng-controller="LoginController">

    <div class="container">
        <main id="content" class="widget-login-container" role="main">
            <div class="row">
                <div class="col-lg-4 col-sm-6 col-xs-10 col-lg-offset-4 col-sm-offset-3 col-xs-offset-1">
                    <h4 class="widget-login-logo animated fadeInUp">
                        <i class="fa fa-circle text-gray"></i>
                        Notify
                        <i class="fa fa-circle text-warning"></i>
                    </h4>
               
                    <section class="widget widget-login animated fadeInUp">
                        <header>
                            <h3>Login to your Notify App</h3>
                        </header>
                        <div class="widget-body">
                            <p class="widget-login-info">                             
                            </p>
                            <p class="widget-login-info">                               
                            </p>
                            <form class="login-form mt-lg" novalidate name="f1" ng-submit="Login()">
                                <div class="form-group">
                                    <input type="text" ng-model="LoginData.Username" name="cUsername" id="textName"placeholder="Username" class="form-control" ng-class="Submitted?'ng-dirty':''" required autofocus />                                  
                                </div>
                                <div class="form-group">
                                    <input type="password" ng-model="LoginData.Password" name="cPassword" placeholder="Password" class="form-control" ng-class="Submitted?'ng-dirty':''" required autofocus />                                  
                                </div>
                                <div class="clearfix">
                                    <div class="btn-toolbar pull-right">
                                        <a class="btn btn-default btn-sm" href="@Url.Action("Register", "Account", new { })">Create an Account</a>                                      
                                        <input type="submit" value="Login"id="btnQueryString" class="btn btn-inverse btn-sm"/>
                                    </div>
                                </div>
                                <div style="color:rgb(142,2,2)">{{Message}}</div>
                                <div class="row">                                   
                                    <div class="col-sm-6 col-sm-push-6">
                                        <div class="clearfix">
                                            <div class="checkbox widget-login-info pull-right ml-n-lg">
                                                @*<input type="checkbox" id="checkbox1" value="1">
                            <label for="checkbox1">Keep me signed in </label>*@
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-6 col-sm-pull-6">
                                        <a data-ng-click="showadd()" class="mr-n-lg" href="javascript:;">Forget Password?</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </main>
        <footer class="page-footer">
            2014 &copy; Sing. Admin Dashboard Template.
        </footer>
    </div>
    <!-- The Loader. Is shown when pjax happens -->
    <div class="loader-wrap hiding hide">
        <i class="fa fa-circle-o-notch fa-spin-fast"></i>
    </div>

    <script src="~/Scripts/angular.js"></script>
    <script src="~/AgController/LoginJs.js"></script>

