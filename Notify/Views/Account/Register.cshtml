<body class="login-page" ng-app="myApp" ng-controller="RegisterController">
    <div class="container">
        <main id="content" class="widget-login-container" role="main">
            <div class="row">
                <div class="col-lg-4 col-sm-6 col-xs-10 col-lg-offset-4 col-sm-offset-3 col-xs-offset-1">
                    <h4 class="widget-login-logo animated fadeInUp">
                        <i class="fa fa-circle text-gray"></i>
                        Notify
                        <i class="fa fa-circle text-warning"></i>
                    </h4>
                    <section class="widget widget-login animated fadeInUp">
                        <header>
                            <h3>Register to your Notify App</h3>
                        </header>
                        <div class="widget-body">
                            <p class="widget-login-info">                              
                            </p>
                            <p class="widget-login-info">                              
                            </p>
                            <form class="login-form mt-lg" novalidate name="f1" ng-submit="SaveData(User)">
                                <div class="form-group">
                                    <input type="text" ng-model="User.FullName" name="uFullName" placeholder="Full name" class="form-control" ng-class="submitted?'ng-dirty':''" required autofocus />
                                    <span class="error" ng-show="(f1.uFullName.$dirty || submitted) && f1.uFullName.$error.required">Fullname required!</span>
                                </div>
                                <div class="form-group">                                  
                                    <input type="email" ng-model="User.EmailID" name="uEmailID" placeholder="Email Id" class="form-control" ng-class="submitted?'ng-dirty':''" required /> <!-- Not required-->
                                    <span class="error" ng-show="(f1.uEmailID.$dirty || submitted) && f1.uEmailID.$error.email">Email ID not valid!</span>
                                </div>
                                <div class="form-group">
                                    <input type="text" ng-model="User.Username" name="uUsername" placeholder="User Name" class="form-control" ng-class="submitted?'ng-dirty':''" required />
                                    <span class="error" ng-show="(f1.uUsername.$dirty || submitted) && f1.uUsername.$error.required">Username required!</span>
                                </div>
                                <div class="form-group">
                                    <input type="password" ng-model="User.Password" name="uPassword" placeholder="Password" class="form-control" ng-class="submitted?'ng-dirty':''" required />
                                    <span class="error" ng-show="(f1.uPassword.$dirty || submitted) && f1.uPassword.$error.required">Password required!</span>
                                </div>
                                <div class="clearfix">
                                    <div class="btn-toolbar pull-right">
                                        <a class="btn btn-default btn-sm" href="@Url.Action("Login", "Account", new {})">Sign In</a>                                     
                                        <input type="submit" value="Sign Up" class="btn btn-inverse btn-sm" />                                      
                                    </div>
                                </div>
                                <div class="row">
                                    <div style="color:red">{{message}}</div>
                                    @*<div class="col-sm-6 col-sm-push-6">
                                            <div class="clearfix">

                                                <div class="checkbox widget-login-info pull-right ml-n-lg">
                                                    <input type="checkbox" id="checkbox1" value="1">
                                                    <label for="checkbox1">Keep me signed in </label>
                                                </div>
                                            </div>
                                        </div>*@

                                    @*<div class="col-sm-6 col-sm-pull-6">
                                            <a class="mr-n-lg" href="#">Trouble with account?</a>
                                        </div>*@
                                </div>
                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </main>
        <footer class="page-footer">
            2014 &copy; Sing. Admin Dashboard Template.
        </footer>
    </div>
</body>
