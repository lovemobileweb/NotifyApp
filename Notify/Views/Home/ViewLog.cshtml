@{
    ViewBag.Title = "ViewLog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li>YOU ARE HERE</li>
    <li class="active">Report View Log</li>
</ol>
<h1 class="page-title"><span class="fw-semi-bold">SMS Log </span></h1>
<section class="widget" ng-app="ReportViewLog" ng-controller="ViewLogController">
    <form id="validation-form" class="form-horizontal form-label-left" name="myform" method="post"
          data-ui-jq="parsley"
          data-parsley-priority-enabled="false"
          novalidate="novalidate">
        <header></header>
        @*<p><a data-ng-click="showadd()" href="javascript:;" class="btn btn-primary">Add New Contact</a></p>*@
        <div class="widget-body" data-ng-init="GetInitViewLog()">
            <div class="mt">
                <table id="datatable-table" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>S.No</th>
                            <th>Date</th>
                            <th class="hidden-xs">From</th>
                            <th class="hidden-xs">To</th>
                            <th class="no-sort">Message</th>
                            <th class="no-sort">Status</th>
                            <th class="no-sort">SidId</th>
                            <th class="no-sort">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr data-ng-repeat="Viewlog in Log">
                            <td>{{$index+1}}</td>
                            <td>{{Viewlog.date |date:'yyyy-MM-dd HH:mm:ss Z'}}</td>
                            <td>{{Viewlog.From}}</td>
                            <td>{{Viewlog.To}}</td>
                            <td>{{Viewlog.Message}}</td>
                            <td>{{Viewlog.status}}</td>
                            <td>{{Viewlog.sidid}}</td>
                            <td class="width-150">
                                <p data-ng-hide="contact.editMode"><a data-ng-click="editContact(contact)" href="javascript:;">View</a></p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </form>
</section>
<script src="~/Scripts/angular.js"></script>
<script src="~/AgController/ReportLogJs.js"></script>