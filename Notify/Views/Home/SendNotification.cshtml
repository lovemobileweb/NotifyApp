@{
    ViewBag.Title = "SendNotification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li>YOU ARE HERE</li>
    <li class="active">Send Notification</li>
</ol>
<h1 class="page-title"><span class="fw-semi-bold">Send-Notification</span></h1>
<section class="widget" ng-app="NotificationScheduleApp" ng-controller="NotificationScheduleController">
    <form method="post">
        <div class="form-horizontal">
            <div class="widget-body" data-ng-init="NSchedulerecord()">
                <div class="mt">
                    <table data-datatable="ng" data-dt-options="dtOptions" class="table table-striped table-hover">
                        <thead style="width:50%">
                            <tr>
                                <th>Schedule ID</th>
                                <th>Notification Campaign</th>
                                @*<th>Contact List Id</th>*@
                                @*<th>Resource Id</th>*@
                                @*<th>Notification Id</th>*@
                                <th>Campaign Date</th>
                                <th>Chanel Mode</th>
                                @*<th>NotificationMessage</th>*@
                                @*<th>RequestConfirmMsg</th>
                                    <th>RepeatNotificationAllow</th>
                                    <th>MsgNumberOfTime</th>
                                    <th>ReapeatDate</th>*@
                                <th>select Message</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr data-ng-repeat="notification in notifications">
                                <td>{{$index+1}}</td>
                                <td>{{notification.NotificationCampaign}}</td>
                                @*<td>{{notification.ContactListId}}</td>
                                    <td>{{notification.NotificationId}}</td>*@
                                <td>{{notification.CampaignDate}}</td>
                                <td>{{notification.ChanelMode}}</td>
                                @*<td>{{notification.NotificationMessage}}</td>*@

                                <td class="width-150">
                                    <input id="Checkbox1" type="checkbox" ng-model="notification.selected" value="{{notification.NScheduleID}}">
                                    @*<p data-ng-hide="contact.editMode"><a data-ng-click="editContact(contact)" href="javascript:;">Edit</a> | <a data-ng-click="deleteContact(contact)" href="javascript:;">Delete</a></p>
                                        <p data-ng-show="contact.editMode"><a data-ng-click="save(contact)" href="javascript:;">Save</a> | <a data-ng-click="toggleEdit(contact)" href="javascript:;">Cancel</a></p>*@
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Send Notification" class="btn btn-default" ng-click="save()" />
                </div>
            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/angular.js"></script>
<script src="~/AgController/NotificationSchedule.js"></script>
