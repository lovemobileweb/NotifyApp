@{
    ViewBag.Title = "ContactList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/css/bootstrap.min.css" />*@
<script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.0/angular.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/lodash.js/2.4.1/lodash.js"></script>
<script src="~/Scripts/angularjs-dropdown-multiselect.js"></script>
<link href="http://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/css/bootstrap-multiselect.css"
      rel="stylesheet" type="text/css" />
@*<script src="~/Scripts/MyApp.js"></script>*@



<ol class="breadcrumb">
    <li>YOU ARE HERE</li>
    <li class="active">Contact List</li>
</ol>
<h1 class="page-title"><span class="fw-semi-bold">Contact-List</span></h1>
<section class="widget" ng-app="ContactListApp" data-ng-controller="ContactListController">
    <header>        
    </header>
    <p><a data-ng-click="showadd()" href="javascript:;" class="btn btn-primary">Add New Contact list</a></p>
    @*<input type="button" value="Modify List" onclick="newDoc()" class="btn btn-primary">*@

    <div class="form-group">
        <label class="pull-left control-label" for="basic" style="margin-top:7px;"><b>Contact List:</b></label>
        <div class="col-sm-9" ng-init="GetInit()">
            <select id="Lname" name="basic" data-ng-model="con.ListId" data-ng-change="GetselectVal()" data-ui-jq="select2" class="form-control ng-pristine ng-valid ng-touched" tabindex="-1" style=" width: 190px;">
                <option value="">--select--</option>
                <option ng-repeat="con in cont" value="{{con.ListId}}">{{con.ContactListname}}</option>

            </select>
        </div>
    </div>

    <div class="widget-body" data-ng-init="getContactList()">
        <div class="mt">
            <table data-datatable="ng" data-dt-options="dtOptions" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th class="no-sort hidden-xs">List Name</th>
                        <th class="hidden-xs">Contacts</th>
                        <th class="no-sort">Status</th>

                    </tr>
                </thead>
                <tbody>
                    <tr data-ng-repeat="contactlist in ContactPropertyList">
                        <td>{{$index+1}}</td>
                        <td>{{contactlist.ContactListname}}</td>
                        <td>{{contactlist.FirstName}}-{{contactlist.LastName}}</td>
                        <td class="width-150">
                            <p><a data-ng-click="deleteContactList(contactlist.ListDetailID)" href="javascript:;">Delete</a></p>                          
                        </td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>

</section>
<script src="~/Scripts/angular.js"></script>
<script src="~/AgController/ContactListjs.js"></script>
<script>
    function newDoc() {
        window.location.assign("/Home/EditContactList")
    }
</script>