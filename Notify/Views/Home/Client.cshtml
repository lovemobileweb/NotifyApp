@Model List<notify.client>
    @{
        ViewBag.Title = "Client";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <ol class="breadcrumb">
        <li>YOU ARE HERE</li>
        <li class="active">Client List</li>
    </ol>
    <h1 class="page-title"><span class="fw-semi-bold">Client List</span></h1>
    <section class="widget" ng-app="ClientApp" data-ng-controller="ClientController">
        <header>            
        </header>
        <p><a data-ng-click="showadd()" href="javascript:;" class="btn btn-primary">Add New Client</a></p>

        <div class="widget-body" data-ng-init="getClients()">
            <div class="mt">
                <table data-datatable="ng" data-dt-options="dtOptions" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>User name</th>
                            <th>Full Name</th>
                            <th class="no-sort hidden-xs">Client Email</th>
                            <th class="hidden-xs">Client Logo</th>
                            @*<th class="no-sort">Status</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        <tr data-ng-repeat="client in clients">
                            <td>{{$index+1}}</td>
                            <td>{{client.ClientUserName}}</td>
                            <td>{{client.ClientName}}</td>
                            <td>{{client.ClientEmail}}</td>
                            <td>{{client.ClientLogo}}</td>

                            @*<td class="width-150">
                                <p data-ng-hide="contact.editMode"><a data-ng-click="editclient(client)" href="javascript:;">Edit</a> | <a data-ng-click="deleteclient(client)" href="javascript:;">Delete</a></p>
                                <p data-ng-show="contact.editMode"><a data-ng-click="save(client)" href="javascript:;">Save</a> | <a data-ng-click="toggleEdit(client)" href="javascript:;">Cancel</a></p>
                            </td>*@

                        </tr>
                    </tbody>
                </table>

            </div>
        </div>

        <div class="modal fade" id="userModel" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
                        <h4 class="modal-title" id="myModalLabel" ng-hide="editMode">Add User</h4>
                        <h4 class="modal-title" id="myModalLabel" ng-show="editMode">Edit Contact</h4>
                    </div>
                    <div class="modal-body">
                        <form class="form-horizontal" role="form" name="adduserform">
                            <div class="form-group">
                                <label for="title" class="col-sm-2 control-label">Client Name</label>
                                <div class="col-sm-10">
                                    <input type="text" id="firstName" name="basic" class="form-control" placeholder="Your First Name" ng-model="client.clientName"
                                           required="required">

                                </div>
                            </div>
                            <div class="form-group">
                                <label for="title" class="col-sm-2 control-label">Client Email</label>
                                <div class="col-sm-10">
                                    <input type="text" id="lastName" name="basic" class="form-control" ng-model="client.clientEmail"
                                           required="required">

                                </div>
                            </div>
                            <div class="form-group">
                                <label for="title" class="col-sm-2 control-label"> Client logo</label>
                                <div class="col-sm-10">
                                    <input type="email" id="email" name="email" class="form-control" ng-model="client.ClientLogo"
                                           data-parsley-trigger="change"
                                           data-parsley-validation-threshold="1"
                                           required="required">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <span data-ng-hide="editMode">
                                        <input type="submit" value="Add" ng-disabled="adduserform.$invalid" data-ng-click="add()" class="btn btn-primary" />
                                    </span>
                                    <span data-ng-show="editMode">
                                        <input type="submit" value="Update" data-ng-click="update()" class="btn btn-primary" />
                                    </span>
                                    <input type="button" value="Cancel" data-ng-click="cancel()" class="btn btn-primary" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/AgController/Clientjs.js"></script>
